{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "format": {
      "inputs": ["*"]
    },
    "lint": {
      "dependsOn": ["format"]
    },
    "type-check": {
      "inputs": ["./**/*.ts", "./**/*.tsx"]
    }
  }
}
