{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "ESNext"],
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "~": ["/"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "downlevelIteration": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
